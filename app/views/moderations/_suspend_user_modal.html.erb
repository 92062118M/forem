<div id="suspend-unsuspend-modal" class="hidden">
  <% if @article.user.suspended? %>
    <p><%= t("views.moderations.actions.suspend.unsuspend_modal_text", username: @article.username) %></p>

    <div class="crayons-field mt-4">
      <label for="unsuspend_reason_userid_<%= @article.user.id %>" class="crayons-field__label">Note:</label>
      <textarea
        id="unsuspend_reason_userid_<%= @article.user.id %>"
        rows="4"
        cols="70"
        placeholder="Reason for unsuspension"
        class="crayons-textfield"
        aria-describedby="unsuspension-reason-error"
        required></textarea>
      <p
        id="unsuspension-reason-error"
        class="suspend-unsuspend-reason-error crayons-field__description"
        style="color: red;"
        aria-live="assertive">
      </p>
    </div>
    <div class="mt-4">
      <button
        id="submit-user-unsuspend-btn"
        class="c-btn c-btn--primary"
        data-btn-action="unsuspend"
        data-reason-selector="#unsuspend_reason_userid_<%= @article.user.id %>"
        data-user-id="<%= @article.user.id %>">
        <%= t("views.moderations.actions.suspend.unsuspend_modal_button", username: @article.username) %>
      </button>
    </div>
  <% else %>
    <p><%= t("views.moderations.actions.suspend.suspend_modal_text", username: @article.username) %></p>

    <div class="crayons-field mt-4">
      <label for="suspend_reason_userid_<%= @article.user.id %>" class="crayons-field__label">Note:</label>
      <textarea
        id="suspend_reason_userid_<%= @article.user.id %>"
        rows="4"
        cols="70"
        placeholder="Reason for suspension"
        class="crayons-textfield"
        aria-describedby="suspension-reason-error"
        required></textarea>
      <p
        id="suspension-reason-error"
        class="suspend-unsuspend-reason-error crayons-field__description"
        style="color: red;"
        aria-live="assertive">
      </p>
    </div>
    <div class="mt-4">
      <button
        id="submit-user-suspend-btn"
        class="c-btn c-btn--destructive c-btn--primary"
        data-btn-action="suspend"
        data-reason-selector="#suspend_reason_userid_<%= @article.user.id %>"
        data-user-id="<%= @article.user.id %>">
        <%= t("views.moderations.actions.suspend.suspend_modal_button", username: @article.username) %>
      </button>
    </div>
  <% end %>
</div>
